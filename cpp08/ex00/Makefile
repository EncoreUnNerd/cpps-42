NAME = easyfind

SRCS = main.cpp

OBJS = $(SRCS:.cpp=.o)

CC = c++
CFLAGS = -Wall -Wextra -Werror -std=c++98
GREEN = \033[32m
BLUE = \033[34m
RESET = \033[0m

all: $(NAME)

$(NAME): $(OBJS)
	@printf "$(BLUE)[ðŸ’­] $(NAME) compiling$(RESET)\n"
	@$(CC) $(CFLAGS) -o $@ $^
	@printf "$(GREEN)[âœ…] $(NAME) compiled$(RESET)\n"

clean:
	@printf "$(GREEN)[ðŸ§¹] cleaning$(RESET)\n"
	@rm -f $(OBJS)
	@printf "$(GREEN)[âœ¨] cleaned$(RESET)\n"

fclean: clean
	@rm -f $(NAME)
	@printf "$(GREEN)[âœ¨] fully cleaned$(RESET)\n"

.cpp.o:
	@$(CC) $(CFLAGS) -c $< -o $@

re: fclean all

.PHONY: all clean fclean re
